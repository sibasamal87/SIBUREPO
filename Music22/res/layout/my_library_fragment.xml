<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical" xmlns:app1="http://schemas.android.com/apk/res/com.hnsamalco.music">
     
     <com.hnsamalco.music.customview.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        app1:pstsIndicatorColor="#55686f"
        app1:pstsIndicatorHeight="5dp"   
        android:layout_height="48dip"
        android:background="@drawable/background_tabs" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

</LinearLayout>
